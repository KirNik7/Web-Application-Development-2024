@model Lab_1.Models.MatrixModel

<h2>Results</h2>

@if (Model != null)
{
    <h3>Matrix:</h3>
    <table border="1">
        @for (int i = 0; i < Model.Matrix.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j < Model.Matrix.GetLength(1); j++)
                {
                    <td style="border: 1px solid black; padding: 8px; text-align: center;">@Model.Matrix[i, j]</td>
                }
            </tr>
        }
    </table>

    <h3>Minimum element in each column:</h3>
    <p>@string.Join(", ", Model.MinInColumns)</p>

    <h3>Maximum element in each row:</h3>
    <p>@string.Join(", ", Model.MaxInRows)</p>
}

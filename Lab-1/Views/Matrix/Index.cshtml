@{
    ViewData["Title"] = "Matrix Analyzer";
}

<h2>Matrix Analyzer</h2>
<form asp-controller="Matrix" asp-action="Analyze" method="post">
    <label for="rows">Rows:</label>
    <input type="number" name="rows" id="rows" min="1" required><br>
    <label for="columns">Columns:</label>
    <input type="number" name="columns" id="columns" min="1" required><br>
    <button type="submit">Generate and Analyze Matrix</button>
</form>
